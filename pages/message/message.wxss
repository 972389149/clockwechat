  color: #fff;
}
.messageDetail{
  width: 90%;
  border-top: 1px solid #E6E6E6;
  padding-left: 5%;
  padding-right: 5%;
  position: fixed;
  bottom: 0px;
  padding-top: 10rpx;
  font-size: 30rpx;
  min-height: 40%;
  max-height: 40%;
  overflow-y: auto;
  background-color: #EFF4FA;
  color: #303133;
}
.messageDetailTop{
  position: fixed;
  width: 95%;
