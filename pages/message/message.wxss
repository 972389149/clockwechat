/* pages/message/message.wxss */
.messageHead{
  width: 100%;
  height: 84rpx;
  border-top: 1px solid #E6E6E6;
  border-bottom: 1px solid #E6E6E6;
  text-align: center;
  font-size: 35rpx;
  overflow: hidden;
}
.messageName{
  float: left;
  width: 33%;
  height: 100%;
  padding-top: 20rpx;
  border-right: 1px solid #E6E6E6;
}
.adminName{
  float: left;
  width: 33%;
  height: 100%;
  padding-top: 16rpx;
  border-right: 1px solid #E6E6E6;
}
.adminPhone{
  float: left;
  width: 30%;
  height: 100%;
  padding-top: 16rpx;
  border-right: 1px solid #E6E6E6;
}
.messageControl{
  float: left;
  width: 33%;
  height: 100%;
  padding-top: 16rpx;
}
.messageContent{
  width: 100%;
  border-bottom: 1px solid #E6E6E6;
  text-align: center;
  font-size: 25rpx;
  overflow: hidden;
  max-height: 450rpx;
  overflow-y: auto;
}
.messageItem{
  height: 80rpx;
  width: 100%;
  border-bottom: 1px solid #E6E6E6;
  /* margin-bottom: 10rpx; */
  overflow: hidden;
  background-color: #fff;
}
.messageItem_{
  height: 80rpx;
  width: 100%;
  border-bottom: 1px solid #E6E6E6;
  overflow: hidden;
  background-color: #F5F7FA;
}
.acceptBtn{
  float: left;
  width: 35%;
  height: 52rpx;
  margin-top: -7rpx;
  border: 1px solid #E6E6E6;
  margin-left: 10%;
  font-size: 30rpx;
  border-radius: 10rpx;
  padding-top: 8rpx;
  background-color: #67C23A;
  color: #fff;
}
.refuseBtn{
  float: left;
  width: 35%;
  height: 52rpx;
  margin-top: -7rpx;
  border: 1px solid #E6E6E6;
  margin-left: 10%;
  font-size: 30rpx;
  border-radius: 10rpx;
  padding-top: 8rpx;
  background-color: #E6A23C;
  color: #fff;
}
.delBtn{
  width: 80%;
  height: 52rpx;
  margin-top: -7rpx;
  border: 1px solid #E6E6E6;
  margin-left: 10%;
  font-size: 30rpx;
  border-radius: 10rpx;
  padding-top: 8rpx;
